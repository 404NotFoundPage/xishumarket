}

.you_intro .title {
  width: 300rpx;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  float: left;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 40rpx;
  text-align: left;
}
.title>text{
  display:-webkit-box; 
  -webkit-line-clamp:2; 
  overflow:hidden; 
  -webkit-box-orient:vertical;
  text-overflow:ellipsis;
}

.pr_gray {
  text-decoration: line-through;
  font-size: 12px;
  color: #999;
  text-align: left;
}

.you_pic {
  width: 100%;
  height: 860rpx;
  border-radius: 30rpx;
  display: block;
}

.title text {
  line-height: 150%;
}

.pr span {
  display: inline-block;
  font-size: 30rpx;

.container {
  height: 100%;
  padding: 0 40rpx;
   background: #fff; 
  box-sizing: border-box;
  overflow: hidden;
}

.hiddenScroll {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  padding: 0 40rpx;
  background: #fff;
  box-sizing: border-box;
}

.aa {
  height: 100%;
  padding: 0 40rpx;

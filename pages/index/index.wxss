  box-sizing: border-box;
  overflow: hide;
}

.you_title {
  font-family: PingFangSC-Medium;
  font-size: 56rpx;
  color: #333;
  width: 100%;
  text-align: left;
  margin-top:23rpx;
}

.you_en {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #959595;
  margin-top: 14rpx;
  width: 100%;
  text-align: left;
  text-transform: uppercase;
}

.you_goods {
  width: 100%;
  text-align: center;
  margin-top: 49rpx;
  /* background: url('http://7xoq3p.com1.z0.glb.clouddn.com/shopb9d9807e158e499389f3ebef504519691530515057.png')no-repeat;*/

.item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 10rpx;
    border-bottom: 1rpx solid rgb(243, 243, 243)
}
.img_1{
    width: 40rpx;
    height: 50rpx;
    
}
.img_2{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}
.item>view:nth-of-type(1){
    display: flex;
    flex-basis: 50%;
    justify-content: space-around;
    align-items: center;
    display: flex;
}
.item>view:nth-of-type(1)>view:nth-of-type(1){
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-basis: 50%;
}
.item>view:nth-of-type(1)>text{
    flex-basis: 50%;
    text-align: left;
}

.item>view:nth-of-type(2){
    color: #e72e26;
    flex-basis: 20%;
    text-align: left;
}
.item>view>text:nth-of-type(1){
    font-size: 26rpx;
}

.headnum{
    background-color: #dbdbdb;
    border-radius: 50%;
    text-align: center;
    line-height: 40rpx;
    width: 40rpx;
    font-size: 26rpx;
    height: 40rpx;
    color: white;
}

/* pages/mycustum/mycustum.wxss */
page{
    background-color: #f8f8f8;
}
.head{
    background-color: #f9de4a;
    height: 160rpx;
    color: #fefae0;
    font-size: 26rpx;
    padding: 40rpx;
}
.head>view{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20rpx;
}
.head>view>text:nth-of-type(1){
    font-size: 70rpx;
}
.head>view>text:nth-of-type(2){
    color: white;
    background-color: #eb4c45;
    border-radius: 5rpx;
    box-sizing: border-box;
    padding: 7rpx 20rpx;
}
.wrap{
    margin-top: 20rpx;
}
.item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: white;
    padding: 30rpx 20rpx;
    flex-wrap: nowrap;
    font-size: 26rpx;
    border-bottom: 1rpx solid #f8f8f8;
}
.item>view{
    display: flex;
}
.item>view:nth-of-type(1){
    flex-basis: 80%;
    justify-content: flex-start;
    align-items: center;
}
.item>view:nth-of-type(2){
    flex-basis: 30%;
    justify-content: flex-start;
    flex-direction: column;
    align-items: flex-end;
}
.item>view>view>text:nth-of-type(1),.item>view>text:nth-of-type(1){
    color: #3c3c3c;
    font-size: 32rpx;
}
.item>view>view>text:nth-of-type(2),.item>view>text:nth-of-type(2){
    color: #c8c8c8;
    font-size: 24rpx;
    margin-top: 10rpx;
}
.item>view>view{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    margin-left: 20rpx;
}
.item image{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}


.none{
    box-sizing: border-box; 
    font-size: 24rpx;
    text-align: center;
    padding: 40rpx;
    color: #969696;
}
.mask{
    position: fixed;
    z-index: 998;
    height: 100vh;
    width: 100vw;
    background-color: #3c3c3c;
    opacity: 0.8;
    top: 0;
    left: 0;

}
.mask_content{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto auto;
    text-align: center;
    z-index: 999;
    width: 80%;
    height: 70%;
}
.mask_content>view:nth-of-type(1){
    height: 90%;
}
.mask_content>view:nth-of-type(2){
    margin-top: 20rpx;
}
.mask_content>text{
    color: white;
    font-size: 24rpx;
}
.mask_content>view:nth-of-type(1)>image{
    width: 100%;
    height: 100%;
}
.mask_content>view:nth-of-type(2)>image{
    width: 40rpx;
    height: 40rpx;

}














.userinfo{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    height: 350rpx;
    padding: 30rpx 0;
    box-sizing: border-box;
    position: relative;
}
.userinfo>image:nth-of-type(2){
    width: 110rpx;
    height: 120rpx;
    border-radius: 50%;
}
.userinfo>text{
    margin-top: 20rpx;
}

.my_pic {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto auto;
    width: 50%;
    height: 250rpx;
    color: white;
    text-align: center;
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    box-sizing: border-box;
    padding: 20rpx;
  }
  .my_pic>text:nth-of-type(2){
      font-size: 80rpx;
      font-weight: bolder;
  }
  .my_pic>text:nth-of-type(3){
      background-color: #eb4c46;
      padding: 7rpx 30rpx;
      box-sizing: border-box;
      color: white;
      border-radius: 5rpx;
      margin-top: 15rpx;
  }
  .my_pic > image {
    width: 120rpx;
    height: 120rpx;
    margin-top: 10rpx;
    border-radius: 50%;
    background-color: #fff;
  }
  
  .my_pic > view {
    color: #1e1e1e;
    font-size: 28rpx;
    margin-top: 20rpx;
  }
  .mycate{
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20rpx 100rpx;
      flex-wrap: nowrap;
      height: 120rpx;
      color: #6d6d6d;
      background-color: white;
      font-size: 24rpx;
  }
  .mycate>view{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
  }
  .mycate>view>text{
      margin-top: 10rpx;
  }
  .mycate>view>image{
      width: 42rpx;
      height: 50rpx;
  }
  .mycate>view:nth-of-type(2)>image{
      width: 54rpx;
      height: 50rpx;
  }


  .userinfo>text{
        background-color: #fcefa5;
        border-radius: 20rpx;
        padding: 5rpx 20rpx;
        font-size: 22rpx;
        margin-top:15rpx;
  }
  page{
    min-height: 100vh;
    background-color: #f7f7f7;
  }
.commend_list{
    width: 100%;
    padding: 20rpx 20rpx 0 20rpx;
    display: flex;
    justify-content: space-between;
    /* align-items: center; */
    box-sizing:border-box;
    flex-wrap: wrap;

}
.commend_list>view{
    padding: 0 0 20rpx 0;
    background-color: white;
    flex-basis: 48%;
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    align-items: center;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}
.commend_list>view>image{
    width: 100%;
    height: 320rpx;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;

}
.commend_list>view>text{
    font-size: 28rpx;
    padding: 10rpx 20rpx 0 20rpx;
}
.info{
    display:-webkit-box; 
    -webkit-line-clamp:2; 
    overflow:hidden; 
    -webkit-box-orient:vertical;
    text-overflow:ellipsis;
    
}
.commend_list>view>view{
    text-align: left;
    width:100%;
    /* padding: 10rpx; */
}
.commend_list>view>view>text{
    font-size: 24rpx;
    text-align: left !important;
}
.commend_list>view>view>text:nth-of-type(1){
    font-size: 36rpx;
    color: #cca962;
}
.commend_list>view>view>text:nth-of-type(2){
    font-size: 20rpx;
    text-decoration: line-through;
}
.fs_price{
    background-color: white;
    padding: 5rpx 20rpx !important;
    color: #ed615b;
    font-size: 12rpx;
    box-sizing: border-box;
    border-radius: 30rpx;
    text-align: center;
    width:300rpx;
    border: 1rpx solid #ed615b;
    margin-bottom: 20rpx;
}
.none{
    box-sizing: border-box; 
    font-size: 24rpx;
    text-align: center;
    padding: 40rpx;
    color: #969696;
}

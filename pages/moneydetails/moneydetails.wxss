page{
    background-color: #f5f5f5
}
.item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    background-color: white;
    border-bottom: 1rpx solid #f8f8f8;
}
.item:nth-of-type(1){
    margin-top: 20rpx;
}
.item>image{
    flex-basis: 30%;
    height: 180rpx;
    border-radius:10rpx;
}
.item>view{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    flex-basis: 65%;
    box-sizing: border-box;
    padding: 10rpx;
    height: 180rpx;
    font-size: 28rpx;
}
.item>view>view{
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width:100%;
}
.item>view>view>text:nth-of-type(1){
    flex-basis: 85%;
    word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}
.item>view>view>view{
    flex-basis: 40%;
    text-align: right;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}
.item>view>view>view>text:nth-of-type(1){
    color: #ed5c55;
    font-weight: bolder;
    font-size:30rpx;
}
.item>view>view>view>text:nth-of-type(2){
    color: #d6d6d6;
    font-size:26rpx;
    margin-top:10rpx;
}
.none{
    box-sizing: border-box; 
    font-size: 24rpx;
    text-align: center;
    padding: 40rpx;
    color: #969696;
}
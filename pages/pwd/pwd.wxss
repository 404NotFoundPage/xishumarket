/* pages/pwd/pwd.wxss */
.wrap{
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.wrap>view:nth-of-type(1){
    width: 80%;
    height: 90rpx;
    margin-bottom: 10rpx;
    border: 1rpx solid #f5ce46;
    border-radius: 10rpx;
}
.wrap>view>input{
    width: 100%;
    height: 100%;
    padding-left: 20rpx;
}
.wrap>view:nth-of-type(2){
    width: 80%;
    padding: 0.1rpx 0.2rpx;
    box-sizing: border-box;
    height: 90rpx;
}
.wrap>view:nth-of-type(2)>button{
    background-color: #f5ce46;
    color: white;
    height: 100%;
    font-size: 28rpx;
    line-height: 90rpx;
}
.go_share {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.9);
    opacity: 0.9;
    border-radius: 50%;
  }
  
  .go_share>image {
    width: 40rpx;
    height: 40rpx;
  }
  .share_btn {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
    border-radius: 30rpx;
    background-color: #ccc;
    opacity: 0.6;
  }



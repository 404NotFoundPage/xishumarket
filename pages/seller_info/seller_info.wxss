/**index.wxss**/

.content {
  background: #fff;
  padding-bottom: 80rpx;
}

.head {
  position: relative;
  color: #fff;
  height: 440rpx;
  width: 100%;
}

.ju {
  width: 100%;
  height: 40rpx;
  display: block;
  position: absolute;
  bottom: 0px;
  z-index: 1000;
}

.two, .thre {
  position: relative;
}

.map {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  visibility: hidden;
  width: 100%;
  height: 100%;
  z-index: 100;
}

.share_btn {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 100;
  opacity: 0;
}

.head .barner {
  width: 100%;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  height: 440rpx;
}

.mark {
  width: 100%;
  height: 440rpx;
  background: rgba(00, 00, 00, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.head_mes {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 440rpx;
}

.view_img {
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-sizing: border-box;
  margin: 40rpx auto 0 auto;
}

.view_img image {
  width: 100%;
  height: 100%;
}

.title {
  text-align: center;
  width: 100%;
  display: block;
  margin-top: 20rpx;
  color:white;
}

.demo {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  font-size: 24rpx;
}

.demo image {
  width: 40rpx;
  height: 40rpx;
}

.demo view {
  text-align: center;
  margin-top: 6rpx;
}

.one {
  flex: 1;
}

.space {
  flex: 0.5;
}

.two {
  flex: 1;
  text-align: center;
}

.thre {
  flex: 1;
}

.zation {
  position: relative;
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
}

.zation image {
  width: 90%;
  height: 160rpx;
}

.btncall {
  position: absolute;
  right: 72rpx;
  top: 26rpx;
  width: 240rpx;
  height: 66rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  background-image: linear-gradient(0deg, #ea4174 0%, #ed976d 100%),
                      linear-gradient(#f9de4a, #f9de4a);
  background-blend-mode: normal, normal;
  box-shadow: 0rpx 8rpx 10rpx 0rpx rgba(0, 0, 0, 0.2);
  border-radius: 33rpx;
}

.people {
  position: absolute;
  right: 116rpx;
  bottom: 31rpx;
  color: #fff;
  font-size: 24rpx;
}

.buy_tit {
  width: 100%;
  text-align: center;
  font-weight: bold;
  color: #000;
  font-size: 28rpx;
  position: relative;
  margin: 60rpx 0;
}

.buy_tit:after {
  content: "";
  width: 30rpx;
  height: 10rpx;
  background: #f9de4a;
  border-radius: 25rpx;
  display: block;
  position: absolute;
  left: 61.5%;
  top: 40%;
}

.buy_tit::before {
  content: "";
  width: 30rpx;
  height: 10rpx;
  background: #f9de4a;
  border-radius: 25rpx;
  display: block;
  position: absolute;
  left: 34%;
  top: 40%;
}

.buy_li {
  display: flex;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
}

.buy_li image {
  min-width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  display: block;
  flex: 1;
}

.buy_text {
  font-size: 24rpx;
  flex: 3;
  margin-left: 30rpx;
}

.buy_txt {
  width: 349rpx;
  color: #000;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 37rpx;
}

/* @media screen and (max-width: 320px) {
  .buy_txt, .buy_mon {
    max-width: 400rpx;
  }
} */

.buy_price {
  margin-top: 30rpx;
}

.buy_price span {
  color: #e3503d;
  line-height: 70rpx;
}

.buy_price i {
  color: #969696;
  padding-left: 20rpx;
}

.buy_price button {
  background: #e3503d;
  border-radius: 60rpx;
  color: #fff;
  line-height: normal;
  width: 140rpx;
  padding: 10rpx 10rpx;
  font-size: 24rpx;
  float: right;
}

.buy_price:after {
  clear: both;
  display: block;
  content: "";
  height: 0;
}

.gray {
  width: 100%;
  height: 20rpx;
  background: #f8f8f8;
  clear: both;
}

.buy_lis {
  display: flex;
  margin-bottom: 40rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.buy_lis image {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
}

.buy_lis view {
  flex: 3;
  font-size: 24rpx;
  text-align: left;
}

.buy_lis button {
  flex: 1;
  padding: 0;
  width: 60rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 24rpx;
  margin-top: -9rpx;
  box-sizing: border-box;
}

.buy_lis span {
  display: inline-block;
  flex: 1;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.buy_lix view {
  flex: 4;
}

.buy_liy button {
  background: #52cc52;
  color: #fff;
}

.buy_liz button {
  background: #f9de4a;
  color: #000;
}

@media screen and (max-width: 320px) {
  .buy_lis span {
    flex: 1.5;
  }
}

.brief {
  padding: 0 20rpx 100rpx 20rpx;
  box-sizing: border-box;
}

.brief p {
  display: block;
  font-size: 24rpx;
  color: #777;
  margin-bottom: 10rpx;
  line-height: 200%;
}

.brief image {
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.footer {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  border-top: 1px solid #bdbbba;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.footer > view {
  width: 33.33%;
  display: inline-block;
  text-align: center;
}

.footer image {
  display: block;
  width: 58rpx;
  height: 58rpx;
  margin: auto;
}

.footer text {
  font-size: 20rpx;
  padding-top: 0rpx;
  display: block;
  color: #999;
}

.footer .active_txt {
  color: #333;
}

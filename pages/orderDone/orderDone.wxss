.clearfix:before, .clearfix:after {
  content: " ";
  display: block;
  font-size: 0;
  height: 0;
  line-height: 0;
  visibility: hidden;
  width: 0;
  clear: both;
}

page {
  background: #f8f8f8;
}

.footer {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border: 2rpx solid #e5e5e4;
  background: #fff;
}

.he_le {
  float: left;
}

.he_le > image {
  display: inline-block;
  width: 20rpx;
  margin-left: 18rpx;
  margin-top: 30rpx;
}

.he_mid {
  color: #1e1e1e;
  font-size: 36rpx;
  text-align: center;
  line-height: 90rpx;
}

.or_msg {
  height: 200rpx;
  background-color: #f9de4a;
}

.msg_le {
  float: left;
  margin-left: 40rpx;
  margin-top: 60rpx;
}

.msg_le > image {
  width: 80rpx;
  height: 80rpx;
}

.msg_ri {
  float: left;
  margin-left: 40rpx;
  margin-top: 54rpx;
}

.msg1 {
  color: #fff;
  font-size: 36rpx;
}

.msg2 {
  color: #fff;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.or_info {
  height: 240rpx;
  background: #fff;
}

.info_le > image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  float: left;
  margin-top: 40rpx;
  margin-left: 40rpx;
}

.info_mid {
  float: left;
  width: 45%;
  margin-left: 30rpx;
  margin-top: 34rpx;
}

.info_name {
  width: 329rpx;
  color: #1e1e1e;
  font-size: 28rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 42rpx;
  overflow: hidden;
}

.info_com {
  color: #969696;
  font-size: 24rpx;
  margin-top: 60rpx;
}

.info_ri {
  float: right;
  margin-top: 32rpx;
  margin-right: 20rpx;
  text-align: right;
}

.price_now {
  color: #1e1e1e;
  font-size: 32rpx;
}

.price_ori {
  color: #969696;
  font-size: 24rpx;
  text-decoration: line-through;
  margin-top: 20rpx;
}

.or_sum {
  color: #969696;
  font-size: 24rpx;
  margin-top: 40rpx;
}

.or_attention {
  color: #969696;
  font-size: 24rpx;
  padding-left: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #f8f8f8;
}

.or_ul {
  list-style: none;
  padding: 40rpx;
  box-sizing: border-box;
  color: #323232;
  font-size: 28rpx;
  background: #fff;
}

.or_ul > view {
  color: #666;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.ft_le {
  float: left;
  margin: auto;
  width: 40%;
  height: 100%;
}

.ft_you {
  border-right: 2rpx solid #f5f5f5;
}

.ft_you, .ft_ke {
  box-sizing: border-box;
  float: left;
  width: 50%;
  height: 100%;
  padding-top: 12rpx;
}

.ft_ke > image, .ft_you > image {
  display: block;
  width: 44rpx;
  height: 40rpx;
  margin: 0 auto;
}

.ft_ke > view, .ft_you > view {
  color: #666;
  font-size: 24rpx;
  text-align: center;
  margin-top: 8rpx;
}

.ft_ri {
  float: right;
  width: 59%;
  background-color: #f9de4a;
  color: #2d2d2d;
  font-size: 24rpx;
  text-align: center;
  line-height: 100rpx;
}

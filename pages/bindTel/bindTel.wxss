.container {
  display: block;
  background: #f8f8f8;
  padding: 0;
}

.bind_row {
  box-sizing: border-box;
  width: 100%;
  padding: 0 40rpx;
  border-top: 2rpx solid #f8f8f8;
  background-color: #fff;
  overflow: hidden;
}

.bind_row >.row1 {
  float: left;
  width: 140rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  font-size: 28rpx;
}

.bind_row>.row2>input {
  height: 100rpx !important;
  width: 300rpx !important;
}

.bind_row>.row2 {
  float: left;
  width: 166rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  font-size: 28rpx;
  margin-left: 50rpx;
}

.bind_random {
  width: 120rpx;
  height: 48rpx;
  float: right;
  margin-top: 26rpx;
  border-radius: 4rpx;
  color: #969696;
  line-height: 48rpx;
  font-size: 28rpx;
  text-align: center;
  border: solid 1px #c8c8c8;
}

.bing_yan {
  float: right;
  height: 48rpx;
  margin-top: 26rpx;
  line-height: 48rpx;
  background-color: #f9de4a;
  color: #323232;
  font-size: 24rpx;
  text-align: center;
}

.bind_btn {
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f9de4a;
  border-radius: 8rpx;
  color: #323232;
  font-size: 32rpx;
  margin-top: 60rpx;
}

.phcolor {
  color: #c9c9c9;
}

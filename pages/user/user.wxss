.my_top {
  position: relative;
  height: 400rpx;
}

page {
  background: #f8f8f8;
}

.my_bg {
  width: 100%;
  height: 400rpx;
}

.bor_bot {
  border-bottom: 1px solid #f1f1f1;
  padding-bottom: 30rpx;
}

.my_pic {
  position: absolute;
  left: 50%;
  top: 18%;
  width: 140rpx;
  height: 140rpx;
  margin-left: -70rpx;
  text-align: center;
  background: #fff;
  border-radius: 50%;
}

.my_pic > image {
  width: 120rpx;
  height: 120rpx;
  margin-top: 10rpx;
  border-radius: 50%;
  background-color: #fff;
}
.username_wrap{
  position: absolute;
  top: 240rpx;
  width: 100%;
}
.username{
  position: absolute;
  width: 100%;
  text-align: center;
  color: #1e1e1e;
  font-size: 28rpx;
}
.my_order {
  position: absolute;
  left: 5%;
  bottom: -40%;
  box-sizing: border-box;
  width: 90%;
  height: 260rpx;
  background-color: #fff;
  box-shadow: 0px 6px 20px 0px rgba(65, 60, 55, 0.02);
  border-radius: 5px;
  padding: 40rpx;
}

.order {
  float: left;
  color: #1e1e1e;
  font-size: 28rpx;
}

.all {
  float: right;
  color: #969696;
  font-size: 22rpx;
  margin-top: 2rpx;
}

.all > image {
  width: 11rpx;
  height: 20rpx;
  margin-left: 10rpx;
  vertical-align: -1rpx;
}

.order_list {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-content: center;
  flex-wrap: wrap;
  margin-top: 40rpx;
}

.order_item {
  position: relative;
  text-align: center;
}

.order_item navigator {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.order_item > image {
  width: 52rpx;
  height: 44rpx;
}

.rule {
  display: block;
  color: #1e1e1e;
  font-size: 24rpx;
}

.msg {
  display: inline-block;
  position: absolute;
  right: -10rpx;
  top: -25rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  color: #e3503d;
  font-size: 22rpx;
  line-height: 24rpx;
  border: solid 2rpx #e3503d;
}

.view_set {
  margin-top: 200rpx;
}

.set_li {
  box-sizing: border-box;
  width: 90%;
  padding: 0 40rpx;
  margin-left: 5%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  border-radius: 5px;
  margin-bottom: 20rpx;
}

.li_name {
  float: left;
  width: 80%;
  color: #1e1e1e;
  font-size: 28rpx;
}

.set_li > image {
  float: right;
  width: 11rpx;
  height: 20rpx;
  margin-top: 42rpx;
}

.set_logo {
  width: 100%;
  margin-top: 65rpx;
  margin-bottom: 60rpx;
  text-align: center;
}

.set_logo > image {
  width: 126rpx;
  height: 40rpx;
  opacity: 0.5;
  text-align: center;
}

.zhe {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: #313131;
  z-index: 100;
  opacity: 0.9;
  display: none;
}

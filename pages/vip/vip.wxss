/* pages/vip/vip.wxss */
.wrap_box{
    position: relative;
}
.bg_top{
    width: 100%;
}
.bg_top>image{
    width: 100%;
}
.vip_bg{
    width: 100%;
    text-align: center;
    position: absolute;
    top: 100rpx;

}
.pc_info{
    position: absolute;
    text-align: center;
    top: 170rpx;
    width: 100%;
    z-index: 1;
}
.pc_info>image{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
}
.pc_info>view{
    padding: 10rpx;
}
.pc_info>view>text{
    font-size: 35rpx;
}
.pc_info>text{
    font-size: 25rpx;
}
.vip_power{
    width: 100%;
    text-align: center;
    margin-top: 120rpx;
}
.commend_title{
    width: 100%;
    text-align: center;
}
.commend_title>image{
    width: 240rpx;
    height: 60rpx;
}

.commend_list{
    width: 100%;
    padding: 0 20rpx 105rpx 20rpx;
    display: flex;
    justify-content: space-between;
    /* align-items: center; */
    box-sizing:border-box;
    flex-wrap: wrap;
}
.commend_list>view{
    flex-basis: 48%;
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    align-items: center;
}
.commend_list>view>image{
    width: 100%;
    /* height: 160rpx; */
    border-radius: 10rpx;
}
.commend_list>view>text{
    font-size: 28rpx;

}
.info{
    display:-webkit-box; 
    -webkit-line-clamp:2; 
    overflow:hidden; 
    -webkit-box-orient:vertical;
    text-overflow:ellipsis;
    
}
.commend_list>view>view{
    text-align: left;
    width:100%;
    padding: 10rpx;
}
.commend_list>view>view>text{
    font-size: 24rpx;
}
.commend_list>view>view>text:nth-of-type(1){
    font-size: 36rpx;
    color: #cca962;
}
.commend_list>view>view>text:nth-of-type(2){
    font-size: 20rpx;
    text-decoration: line-through;
}
.open{
    padding: 20rpx; 
    height: 80rpx;
    box-sizing: border-box;
    position: fixed;
    bottom: 20rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    text-align: center;
}
.open>image{
    position: absolute;
    border-radius: 10rpx;
    z-index: 0;
    top: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 90%;
    height: 80rpx;
}
.open>p{
    color: #cca962;
    position: absolute;
    z-index: 5;
    font-size: 30rpx;
    left: 0;
    right: 0;
    margin:0 auto;
    line-height: 80rpx;
    top: 0;
}



.container{

}

.power{
  min-height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  z-index: 99999;
}
.top{
    box-sizing: border-box;
    width:90%;
    margin:0 auto;
    padding:100rpx 0;
    border-bottom: 1rpx solid #EDEDED;
    text-align: center;
  }
  .title_wrap{
    margin-top:20rpx;
  }
  .top_image{
    width:100rpx;
    height:100rpx;
    border-radius: 50%;
  }
  .title{
    font-size:28rpx;
    color:#484848;
  }
  .att{
    box-sizing: border-box;
    width:90%;
    margin:0 auto;
    padding:50rpx 0;
    color:#292929;
    font-size:28rpx;
  }
  ._msg{
    margin-top:30rpx;
    color:#8D8D8D;
    font-size:24rpx;
  }
  .btn{
    box-sizing: border-box;
    width:90%;
    margin:0 auto;
    padding:30rpx 0;
    background-color: white !important;
  }
  .back{
    float:left;
    width:48%;
    height:80rpx;
    line-height: 80rpx;
    border:2rpx solid #E0E0E0;
    border-radius: 10rpx;
    text-align: center;
    color:#2E2E2E;
    font-size:28rpx;
  }
  .confi{
    float:left;
    width:48%;
    margin-left:4%;
    height:80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    text-align: center;
    color:#2E2E2E;
    font-size:28rpx;
    background:#FFDD00;
  }